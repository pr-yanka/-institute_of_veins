<UserControl x:Class="WpfApp2.TestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2"
             mc:Ignorable="d" 
             d:DesignHeight="705" d:DesignWidth="1024">
    <Grid Margin="210,70,0,0">
        <TextBlock HorizontalAlignment="Center" FontFamily="/fonts/#Pescadero" FontSize="22pt" Height="38" VerticalAlignment="Top" > <TextBlock Text="{Binding Path=CurrentPatient.Name}" /><Run Text=" " /><TextBlock Text="{Binding Path=CurrentPatient.Sirname}" /><Run Text=" " /><TextBlock Text="{Binding Path=CurrentPatient.Patronimic}" /></TextBlock>
        <Button x:Name="button" Content="Редактировать профиль" Command="{Binding Path=ToEditPatientCommand}" HorizontalAlignment="Left" Margin="19,61,0,0" VerticalAlignment="Top" Width="373" Height="41" FontFamily="Franklin Gothic Medium" FontSize="16" Background="#FFB8E2EC"/>
        <Button x:Name="button_Copy4" Content="Посмотреть историю" Command="{Binding Path=ToViewHistoryCommand}" HorizontalAlignment="Left" Margin="420,61,0,0" VerticalAlignment="Top" Width="373" Height="41" FontFamily="Franklin Gothic Medium" FontSize="16" Background="#FFB8E2EC"/>

        <StackPanel Orientation="Vertical" Margin="19,118,231,42">
            <StackPanel Orientation="Horizontal" Height="29">
                <TextBlock x:Name="age" HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="30" Width="Auto" ><TextBlock  Text="Возраст :" /></TextBlock>
                <TextBlock x:Name="textBlock_ageAndBirthday" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="30" Width="Auto" Text="{Binding Path=CurrentPatient.Age}"><TextBlock  Text=" лет ("/><TextBlock Text="{Binding Path=PatientBirthday}" /><TextBlock Text=")"/></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="textBlock_1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="30" Width="Auto" ><InlineUIContainer>
                    <TextBlock  Text="Пол : "/>
                        </InlineUIContainer><InlineUIContainer>
                    <TextBlock Text="{Binding CurrentPatient.Gender}" />
                </InlineUIContainer></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="textBlock_phone" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="30" Width="Auto"><Run Text="Телефон"/><Run Text=": "/><TextBlock Text="{Binding Path=CurrentPatient.Phone}"/><LineBreak/><Run/></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="textBlock_adres" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="30" Width="Auto"><Run Text="Город:"/>
                <TextBlock Text="{Binding Path=CurrentPatient.City}"/>
                <TextBlock Text="улица"/>
                <TextBlock Text="{Binding Path=CurrentPatient.Street}"/>
                <TextBlock Text="{Binding Path=CurrentPatient.House}"/><Run Text=" кв. "/>
                <TextBlock Text="{Binding Path=CurrentPatient.Flat}"/>
                <LineBreak/><Run/></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="61">
                <TextBlock x:Name="email" HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="30" Width="Auto" ><TextBlock  Text="Почта :" /></TextBlock>
                <TextBlock x:Name="textBlock_email" HorizontalAlignment="Left" Margin="266,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="30" Width="237" Text="{Binding Path=CurrentPatient.Email}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
            </StackPanel>
        </StackPanel>

        <Button x:Name="button_Copy" Content="Остальные пациенты" Command="{Binding Path=ToTablePatientsCommand}" HorizontalAlignment="Left" Margin="532,552,0,0" VerticalAlignment="Top" Width="234" Height="41" FontFamily="Franklin Gothic Medium" FontSize="16" Background="#FFD0EADD"/>
        <Button x:Name="button_Copy1" Content="Назначить операцию"  Command="{Binding Path=ToNewOperationCommand}" HorizontalAlignment="Left" Margin="275,394,0,0" VerticalAlignment="Top" Width="235" Height="41" FontFamily="Franklin Gothic Medium" FontSize="16" Background="#FFB8E2EC"/>
        <Button x:Name="button_Copy2" Content="Начать обследование" Command="{Binding Path=ToNewPhysicalCommand}" HorizontalAlignment="Left" Margin="21,394,0,0" VerticalAlignment="Top" Width="234" Height="41" FontFamily="Franklin Gothic Medium" FontSize="16" Background="#FFB8E2EC"/>
        <Button x:Name="button_Copy5" Content="Добавить анализы" Command="{Binding Path=ToAddAnalizeCommand}" HorizontalAlignment="Left" Margin="532,394,0,0" VerticalAlignment="Top" Width="234" Height="41" FontFamily="Franklin Gothic Medium" FontSize="16" Background="#FFB8E2EC"/>
        <Button x:Name="button_Copy51" Content="Патологии" Command="{Binding Path=ToPathologyListCommand}" HorizontalAlignment="Left" Margin="21,349,0,0" VerticalAlignment="Top" Width="234" Height="40" FontFamily="Franklin Gothic Medium" FontSize="16" Background="#FFB8E2EC"/>
    </Grid>
</UserControl>
