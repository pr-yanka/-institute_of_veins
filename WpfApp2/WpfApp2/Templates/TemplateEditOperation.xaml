                    VerticalAlignment="Top" Width="107" Height="20"/>
            <Button x:Name="button_Copy5" Content="Взять из последнего&#xD;&#xA;обследования" HorizontalAlignment="Left"  
                    Margin="192,296,0,0"             VerticalAlignment="Top" Width="118" Height="38"/>
            <Button x:Name="button_Copy6" Content="Выбрать диагноз" HorizontalAlignment="Left" Margin="503,271,0,0"              
                    VerticalAlignment="Top" Width="107" Height="20"/>
            <Button x:Name="button_Copy7" Content="Взять из последнего&#xA;обследования" HorizontalAlignment="Left"  
                    Margin="503,296,0,0"             VerticalAlignment="Top" Width="118" Height="38"/>
