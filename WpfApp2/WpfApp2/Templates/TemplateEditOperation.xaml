            <TextBlock x:Name="textBlock_Copy6" HorizontalAlignment="Left" Margin="63,250,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top" Text="Диагноз слева"/>
            <TextBlock x:Name="textBlock_Copy7" HorizontalAlignment="Left" Margin="361,250,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top" Text="Диагноз справа" RenderTransformOrigin="2.097,10.521"/>
