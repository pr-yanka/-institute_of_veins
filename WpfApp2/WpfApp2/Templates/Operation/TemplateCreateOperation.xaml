<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApp2.Templates">
    <DataTemplate x:Key="TemplateCreateOperation">
        <Grid Margin="0,80,0,0">
            <TextBlock HorizontalAlignment="Right" FontSize="22pt" Height="38" VerticalAlignment="Top" Text="{Binding Path=CurrentPatient.Name}"><TextBlock Text="{Binding Path=initials}"></TextBlock>
            </TextBlock>
            <TextBlock HorizontalAlignment="Left" FontSize="22pt" Height="38" VerticalAlignment="Top" Text="Назначение операции" />
            <Button x:Name="button_Copy1"  Command="{Binding Path=ToCurrentPatientCommand}" Content="Вернуться к пациенту" HorizontalAlignment="Left" Margin="277,558,0,0" VerticalAlignment="Top"  
                    Width="215" Height="34"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="24,68,0,0" TextWrapping="Wrap" Text="Тип операции"  
                       VerticalAlignment="Top" FontSize="18"/>
            <ComboBox x:Name="comboBox"  ItemsSource="{Binding Path=OprTypes}" SelectedIndex="{Binding Path=OprTypeSelected}" HorizontalAlignment="Left" Margin="175,57,0,0" VerticalAlignment="Top" Width="251"  
                      Height="40"/>
            <Button x:Name="button_Copy" Content="Добавить новый тип" HorizontalAlignment="Left" Margin="442,57,0,0"              
                    VerticalAlignment="Top" Width="158" Height="40"/>
            <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="5,204,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top"><Run Text="Выб"/><Run Text="ерите"/><Run Text=" время"/></TextBlock>
            <DatePicker SelectedDate="{Binding Path=Operation.Date}" HorizontalAlignment="Left" Margin="5,274,0,0" VerticalAlignment="Top" Width="auto" Height="auto"  
                      FontStretch="Expanded" FontSize="10">
                
            </DatePicker>

            <TextBox Text="{Binding Path=Minute}" BorderBrush="{Binding Path=TextBoxMinute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="comboBox_Copy"  HorizontalAlignment="Left" Margin="5,232,0,0" VerticalAlignment="Top" Width="72">

            </TextBox>
            <TextBlock x:Name="textBlock_Copy33" HorizontalAlignment="Left" Margin="90,234,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top" Text=":"/>
            <TextBox Text="{Binding Path=Hour}"  BorderBrush="{Binding Path=TextBoxHour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="comboBox_Copy1" HorizontalAlignment="Left" Margin="103,232,0,0" VerticalAlignment="Top" Width="72"  
                      RenderTransformOrigin="-0.091,2.227">
                
            </TextBox>
            <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="100,204,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top" Text=":"/>
            <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="190,178,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top" Text="Список всех врачей" FontSize="16" Width="155" TextAlignment="Center"/>
            <TextBlock x:Name="textBlock_Copy3" HorizontalAlignment="Left" Margin="57,126,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top" FontSize="18"><Run Text="А"/><Run Text="нестезик"/></TextBlock>
            <ComboBox x:Name="comboBox_Copy2"   HorizontalAlignment="Left" ItemsSource="{Binding Path=AnestethicTypes}" SelectedIndex="{Binding Path=AnesteticSelected}" Margin="175,117,0,0" VerticalAlignment="Top" Width="251" Height="42"/>
            <Button x:Name="button_Copy2" Content="Добавить новый вид" HorizontalAlignment="Left" Margin="442,119,0,0"              
                    VerticalAlignment="Top" Width="158" Height="40" />
            <DataGrid HorizontalAlignment="Left" Height="220" Margin="195,211,0,0" VerticalAlignment="Top" Width="133"  
                          Foreground="Black" Background="#FFF1F9F9" AutoGenerateColumns="False" HeadersVisibility="None"
                     ItemsSource="{Binding Path=Controller.CurrentViewModel.Doctors}" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="False" >
                <DataGrid.Columns>
                    <DataGridTemplateColumn >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock TextAlignment="Left" Width="Auto" Text="{Binding Path=Data.Sirname}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock TextAlignment="Left" Width="Auto" Text="{Binding Path=initials}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock x:Name="textBlock_Copy4" HorizontalAlignment="Left" Margin="358,178,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top" Text="Ваша бригада" FontSize="16"/>
            <DataGrid HorizontalAlignment="Left" Height="220" Margin="358,211,0,0" VerticalAlignment="Top" Width="124"  
                          Foreground="Black" Background="#FFF1F9F9"  AutoGenerateColumns="False" HeadersVisibility="None"
                     ItemsSource="{Binding Path=Controller.CurrentViewModel.DoctorsSelected}" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="False" >
                <DataGrid.Columns>
                    <DataGridTemplateColumn >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock TextAlignment="Left" Width="Auto" Text="{Binding Path=Data.Sirname}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock TextAlignment="Left" Width="Auto" Text="{Binding Path=initials}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
                </DataGrid>
            <TextBlock x:Name="textBlock_Copy5" HorizontalAlignment="Left" Margin="20,450,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top" Text="NB!"/>
            <TextBox Text="{Binding Path=Operation.NB}"  x:Name="richTextBox" HorizontalAlignment="Left" Height="86" Margin="57,450,0,0" VerticalAlignment="Top"  
                         Width="551">
              
               
            </TextBox>
            <TextBlock x:Name="textBlock_Copy6" HorizontalAlignment="Left" Margin="659,70,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top" Text="Диагноз слева" FontSize="16"/>
            <TextBlock x:Name="textBlock_Copy7" HorizontalAlignment="Left" Margin="841,70,0,0" TextWrapping="Wrap"  
                       VerticalAlignment="Top" Text="Диагноз справа" RenderTransformOrigin="2.097,10.521" FontSize="16"/>
            <Button x:Name="button_Copy3" Content="{Binding Path=ButtonSaveText}" Command="{Binding Path=ToOperationOverviewCommand}" HorizontalAlignment="Left" Margin="554,558,0,0"              
                    VerticalAlignment="Top" Width="215" Height="34" RenderTransformOrigin="0.502,0.471"/>
            <ListBox HorizontalAlignment="Left" Height="225" Margin="490,211,0,0" VerticalAlignment="Top" Width="259"  
                       ItemsSource="{Binding Path=LeftDiagnosisList}"   Foreground="Black" Background="#FFF1F9F9">
                <ListBox.ItemTemplate>
                    <DataTemplate>

                        <TextBlock Padding="5,0,5,0" Text="{Binding  Data.Str}" />

                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox ItemsSource="{Binding Path=RightDiagnosisList}" HorizontalAlignment="Left" Height="225" Margin="755,211,0,0" VerticalAlignment="Top" Width="259"  
                          Foreground="Black" Background="#FFF1F9F9">
                <ListBox.ItemTemplate>
                    <DataTemplate>

                        <TextBlock Padding="5,0,5,0" Text="{Binding  Data.Str}" />

                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button x:Name="button_Copy4" Content="Выбрать диагноз"  Command="{Binding Path=ToLeftDiagCommand}" HorizontalAlignment="Left" Margin="622,102,0,0"              
                    VerticalAlignment="Top" Width="183" Height="40" RenderTransformOrigin="0.497,0.15"/>
            <Button x:Name="button_Copy5" Content="Взять из последнего&#xD;&#xA;обследования" HorizontalAlignment="Left"  
                    Margin="622,157,0,0"             VerticalAlignment="Top" Width="183" Height="40"/>
            <Button x:Name="button_Copy6" Content="Выбрать диагноз" Command="{Binding Path=ToRightDiagCommand}" HorizontalAlignment="Left" Margin="818,102,0,0"              
                    VerticalAlignment="Top" Width="183" Height="40"/>
            <Button x:Name="button_Copy7" Content="Взять из последнего&#xA;обследования" HorizontalAlignment="Left"  
                    Margin="818,157,0,0"             VerticalAlignment="Top" Width="183" Height="40"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>