<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApp2.Templates">
    <DataTemplate x:Key="TemplateAddAnalize">
        <Grid >

            <Grid.RowDefinitions>
                <RowDefinition Height="90"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="Загрузить анализ"  Grid.Column="0" Grid.Row="1" Width="212" Height="35" Grid.RowSpan="5" Command="{Binding Path=OpenAnalizePicture}" Background="#FFF55532" FontFamily="Segoe UI Light" FontSize="16" BorderBrush="{x:Null}" Foreground="White"></Button>
            <TextBlock  Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"   HorizontalAlignment="Right" FontFamily="/fonts/#Pescadero" FontSize="22pt"  VerticalAlignment="Top" > <TextBlock Text="{Binding Path=CurrentPatient.Name}" /><Run Text=" " /><TextBlock Text="{Binding Path=CurrentPatient.Sirname}" /><Run Text=" " /><TextBlock Text="{Binding Path=CurrentPatient.Patronimic}" /></TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="3"  FontFamily="/fonts/#Pescadero" FontSize="18pt" Height="25" Text="Тип :"/>
            <ComboBox Grid.Column="2" Grid.Row="3" ItemsSource="{Binding Path=AnalizeTypes}" SelectedIndex="{Binding Path=SelectedIndexOfAnalizeType}"  FontFamily="/fonts/#Pescadero" FontSize="14pt" Height="18" Text="{Binding Path=AnalizeType.Str}">
               
            </ComboBox>

            <TextBlock Grid.Column="1" Grid.Row="4"  FontFamily="/fonts/#Pescadero" FontSize="18pt" Height="25" Text="Дата :"/>
            <DatePicker SelectedDate="{Binding Path=Analize.data}" Grid.Column="2" Grid.Row="4" Height="18" Width="140" HorizontalAlignment="Left"/>
            <Button Grid.Column="2" Grid.Row="6" x:Name="button_Copy13" Content="{Binding Path=ButtonName}" Command="{Binding Path=ToCurrentPatient}" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="212" Height="35" Background="#FFF55532" FontFamily="Segoe UI Light" FontSize="16" BorderBrush="{x:Null}" Foreground="White"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
